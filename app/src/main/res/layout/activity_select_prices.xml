<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/select_price"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_vertical"
    tools:context=".SelectPricesActivity">
    <!-- Menú superior -->
    <LinearLayout
        android:id="@+id/select_price_upper_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/select_price_button_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/arrow_back"
            app:tint="?attr/editTextColor" />
    </LinearLayout>

    <!-- Contenido principal -->
    <TextView
        android:id="@+id/select_price_description"
        style="@style/SubtitleText"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/select_price_desc"
        app:layout_constraintTop_toBottomOf="@id/select_price_upper_menu" />

    <ScrollView
        android:id="@+id/select_price_middle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/select_price_description">

        <!-- Selector de precios -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <!-- Precio Estándar -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                app:cardCornerRadius="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/colorSurface"
                    android:padding="10dp">

                    <!-- Titulo -->
                    <TextView
                        android:id="@+id/select_price_common_title"
                        style="@style/SubtitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="@string/select_price_common"
                        app:layout_constraintBottom_toTopOf="@id/select_price_common_separator"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Separador -->
                    <View
                        android:id="@+id/select_price_common_separator"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginVertical="8dp"
                        android:background="?attr/colorPrimary"
                        app:layout_constraintTop_toBottomOf="@id/select_price_common_title" />

                    <!-- Descripción -->
                    <TextView
                        android:id="@+id/select_price_common_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:background="@android:color/transparent"
                        android:text="@string/select_price_common_desc"
                        app:layout_constraintBottom_toTopOf="@id/select_price_common_button"
                        app:layout_constraintTop_toBottomOf="@id/select_price_common_separator" />

                    <!-- Botón -->
                    <Button
                        android:id="@+id/select_price_common_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:text="@string/select_price_button"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/select_price_common_desc" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Estudiante -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                app:cardCornerRadius="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/colorSurface"
                    android:padding="10dp">

                    <!-- Titulo -->
                    <TextView
                        android:id="@+id/select_price_student_title"
                        style="@style/SubtitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="@string/select_price_student"
                        app:layout_constraintBottom_toTopOf="@id/select_price_student_separator"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Separador -->
                    <View
                        android:id="@+id/select_price_student_separator"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginVertical="8dp"
                        android:background="?attr/colorPrimary"
                        app:layout_constraintTop_toBottomOf="@id/select_price_student_title" />

                    <!-- Descripción -->
                    <TextView
                        android:id="@+id/select_price_student_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:background="@android:color/transparent"
                        android:text="@string/select_price_student_desc"
                        app:layout_constraintBottom_toTopOf="@id/select_price_student_button"
                        app:layout_constraintTop_toBottomOf="@id/select_price_student_separator" />

                    <!-- Botón -->
                    <Button
                        android:id="@+id/select_price_student_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:text="@string/select_price_button"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/select_price_student_desc" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Adulto mayor -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                app:cardCornerRadius="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/colorSurface"
                    android:padding="10dp">

                    <!-- Titulo -->
                    <TextView
                        android:id="@+id/select_price_adult_title"
                        style="@style/SubtitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="@string/select_price_adult"
                        app:layout_constraintBottom_toTopOf="@id/select_price_adult_separator"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Separador -->
                    <View
                        android:id="@+id/select_price_adult_separator"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginVertical="8dp"
                        android:background="?attr/colorPrimary"
                        app:layout_constraintTop_toBottomOf="@id/select_price_adult_title" />

                    <!-- Descripción -->
                    <TextView
                        android:id="@+id/select_price_adult_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:background="@android:color/transparent"
                        android:text="@string/select_price_adult_desc"
                        app:layout_constraintBottom_toTopOf="@id/select_price_adult_button"
                        app:layout_constraintTop_toBottomOf="@id/select_price_adult_separator" />

                    <!-- Botón -->
                    <Button
                        android:id="@+id/select_price_adult_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:text="@string/select_price_button"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/select_price_adult_desc" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

