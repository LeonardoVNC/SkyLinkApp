<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:textColor">#202020</item>
        <item name="android:editTextColor">#202020</item>
        <item name="android:textColorHint">#7C7C7C</item>
        <item name="colorOnPrimary">#202020</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif</item>

        <item name="colorPrimary">@color/themeLightPrimary</item>
        <item name="colorSecondary">@color/themeLightSecondary</item>
        <item name="colorAccent">@color/themeLightAccent</item>
        <item name="android:background">@color/themeLightBackground</item>
        <item name="colorSurface">@color/themeLightSurface</item>
        <item name="android:statusBarColor">?attr/colorSecondary</item>
    </style>

    <style name="Theme.Default" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:textColor">#202020</item>
        <item name="android:editTextColor">#202020</item>
        <item name="android:textColorHint">#7C7C7C</item>
        <item name="colorOnPrimary">#202020</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif</item>

        <item name="colorPrimary">@color/themeDefaultPrimary</item>
        <item name="colorSecondary">@color/themeDefaultSecondary</item>
        <item name="colorAccent">@color/themeDefaultAccent</item>
        <item name="android:background">@color/themeDefaultBackground</item>
        <item name="colorSurface">@color/themeDefaultSurface</item>
        <item name="android:statusBarColor">?attr/colorSecondary</item>
    </style>

    <style name="Theme.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:editTextColor">#FFFFFF</item>
        <item name="android:textColorHint">#A9A9A9</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif</item>

        <item name="colorPrimary">@color/themeDarkPrimary</item>
